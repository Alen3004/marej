<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<!-- Filters -->
	<filter>
		<filter-name>ATMFilter</filter-name>
		<filter-class>se.marej.atm.web.ATMFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ATMFilter</filter-name>
		<url-pattern>/</url-pattern>
	</filter-mapping>

	<!-- Servlets -->
	<servlet>
		<servlet-name>ATMServlet</servlet-name>
		<servlet-class>se.marej.atm.web.ATMServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ATMServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateCardServlet</servlet-name>
		<servlet-class>se.marej.atm.web.CardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateCardServlet</servlet-name>
		<url-pattern>/createcard</url-pattern>
	</servlet-mapping>
</web-app>